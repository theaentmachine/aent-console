{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test if Service",
  "description": "Test if the data is a valid Service",
  "type": "object",
  "properties": {
    "serviceName": {
      "type": "string"
    },
    "service": {
      "type": "object",
      "properties": {
        "image": {
          "type": "string"
        },
        "command": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "internalPorts": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "dependsOn": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "source": {
                "type": "number"
              },
              "target": {
                "type": "number"
              },
              "comment": {
                "type": "string"
              }
            },
            "required": [
              "source"
            ],
            "additionalProperties": false
          }
        },
        "labels": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string"
                },
                "comment": {
                  "type": "string"
                },
                "isCommented": {
                  "type": "boolean"
                }
              },
              "additionalProperties": false
            },
            "additionalProperties": false
          }
        },
        "environment": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "sharedEnvVariable",
                    "sharedSecret",
                    "imageEnvVariable",
                    "containerEnvVariable"
                  ]
                },
                "comment": {
                  "type": "string"
                },
                "isCommented": {
                  "type": "boolean"
                }
              },
              "required": [
                "type"
              ],
              "additionalProperties": false
            },
            "additionalProperties": false
          }
        },
        "volumes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "volume",
                  "bind",
                  "tmpfs"
                ]
              },
              "source": {
                "type": "string"
              },
              "target": {
                "type": "string"
              },
              "readOnly": {
                "type": "boolean"
              },
              "comment": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "source"
            ],
            "additionalProperties": false
          }
        },
        "needVirtualHost": {
          "type": "boolean"
        },
        "needBuild": {
          "type": "boolean"
        },
        "needDeploy": {
          "type": "boolean"
        },
        "additionalProperties": false
      }
    },
    "dockerFileCommands": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "destEnvTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "DEV",
          "TEST",
          "PROD"
        ]
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "string",
              "pattern": "^([0-9]+[.])?[0-9]+([EPTGMK][i]?)?$"
            },
            "cpu": {
              "type": "string",
              "pattern": "^([0-9]+[.])?[0-9]+[m]?$"
            },
            "storage": {
              "type": "string",
              "pattern": "^([0-9]+[.])?[0-9]+([EPTGMK][i]?)?$"
            }
          },
          "additionalProperties": false
        },
        "limits": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "string",
              "pattern": "^([0-9]+[.])?[0-9]+([EPTGMK][i]?)?$"
            },
            "cpu": {
              "type": "string",
              "pattern": "^([0-9]+[.])?[0-9]+[m]?$"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "serviceName"
  ]
}